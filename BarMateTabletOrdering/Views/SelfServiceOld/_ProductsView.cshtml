@foreach (var p in Model.ProductsList)
{
    var c = p.CategoryName[0];
    int index = char.ToUpper(c) - 64;

    string indexer = index.ToString() + ".jpg";

    var ccolor = "color0";

    if (index > 0 && index <= 4)
    {
        ccolor = ccolor + "2";
    }
    else if (index > 4 && index <= 8)
    {
        ccolor = ccolor + "3";
    }
    else if (index > 8 && index <= 12)
    {
        ccolor = ccolor + "4";
    }
    else if (index > 12 && index <= 16)
    {
        ccolor = ccolor + "5";
    }
    else if (index > 16 && index <= 20)
    {
        ccolor = ccolor + "6";
    }
    else
    {
        ccolor = ccolor + "7";
    }

    <div class="col-sm-3 col-xs-6">

        <a onclick="add_pictureRecipe('@p.Id','@p.PicturePath','@p.StockItemName','@p.Description')" class="omon" style="color:red; cursor:pointer;"><i class="fa fa-book"></i></a>
        <a href="javascript:void(0)" class="addPct" id="product-@p.Id" onclick="add_posale('@p.Id')" style="margin-bottom:0px;padding-bottom:0px;">

            <div class="mitgliederliste" style="word-wrap: break-word;overflow-wrap: break-word;margin-bottom:0px;padding-bottom:0px;" >
                <input type="hidden" id="idname-@p.Id" name="name" value="@p.StockItemName" />
                <input type="hidden" id="idprice-@p.Id" name="price" value="@p.UnitPrice" />
                <input type="hidden" id="category" name="category" value="@p.CategoryName" />
                <figure class="einzel">
                    <img alt="Mitglieder" src="~/Products/Large/@p.PicturePath" class="img-responsive">
                    <figcaption>
                        NGN @p.UnitPrice<br>
                        <span id="proname">@p.StockItemName</span>
