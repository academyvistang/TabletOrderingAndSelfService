
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>POS - CABBASH</title>

    <link href="~/LatestAllCss/bootstrap.min.css" rel="stylesheet" />
    <link href="~/LatestAllCss/bootstrap-horizon.css" rel="stylesheet" />
    <link href="~/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />



    @if (DateTime.Now.Hour > 18 || DateTime.Now.Hour < 6)
    {
        <link href="~/css/Style-Light.css" rel="stylesheet" />
    }
    else
    {
        <link href="~/css/Style-Light.css" rel="stylesheet" />
    }

</head>
<body>
    <!-- Navigation -->


    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">

                    @if (ViewBag.TableNum > 0)
                    {
                        <li style="padding-right:10px; margin-bottom:3px;" class="visible-desktop"><a class="btn btn-primary hbtn" id="TableOpening" style="color:white;" href="@Url.Action("Index","SelfService", new { tableId = ViewBag.TableNum, tableAlias = ViewBag.TableAlias })"> <i class="fa fa-table fa-lg"> @ViewBag.TableAlias </i></a></li>
                    }


                    @{ FormsIdentity formsIdentity = HttpContext.Current.User.Identity as FormsIdentity;
                        FormsAuthenticationTicket ticket = formsIdentity.Ticket;
                        string userData = ticket.UserData;}

                    <li class="flat-box waves-effect waves-block"><a style="color:white;" class="btn btn-danger hbtn" href="@Url.Action("Start", "SelfService")" title="@userData"><i class="fa fa-sign-out fa-lg">DONE</i></a></li>
                </ul>
            </div>
        </div>
    </nav>





    <div class="container-fluid">

        <div class="row">

            @RenderBody()

        </div>
    </div>

    <script type="text/javascript" src="~/POSI/jquery.slimscroll.min.js"></script>
    <script type="text/javascript" src="~/POSI/waves.min.js"></script>
    <script type="text/javascript" src="~/POSI/bootstrap.min.js"></script>

    <script src="~/POSI/jquery.form.min.js"></script>
    <script src="~/POSI/app.js"></script>


</body>
</html>
